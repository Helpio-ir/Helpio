@model IEnumerable<Helpio.Ir.Application.DTOs.Business.PlanDto>
@{
    ViewData["Title"] = "قیمت‌گذاری و طرح‌ها";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">
                        <i class="bi bi-credit-card"></i>
                        طرح‌های اشتراک و قیمت‌گذاری
                    </h1>
                    <p class="card-subtitle text-muted">پلنی را انتخاب کنید که متناسب با نیازهای سازمان شما باشد</p>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Pricing Cards -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 @(plan.IsRecommended ? "border-primary" : "border-light") shadow-sm">
                        @if (plan.IsRecommended)
                        {
                            <div class="position-absolute top-0 start-50 translate-middle">
                                <span class="badge bg-primary px-3 py-2">پیشنهادی</span>
                            </div>
                        }
                        
                        <div class="card-header text-center @(plan.IsRecommended ? "bg-primary text-white" : "bg-light")">
                            <h4 class="card-title mb-0">@plan.Name</h4>
                            @if (!string.IsNullOrEmpty(plan.Description))
                            {
                                <small class="@(plan.IsRecommended ? "text-white-50" : "text-muted")">@plan.Description</small>
                            }
                        </div>
                        
                        <div class="card-body text-center">
                            <!-- Price -->
                            <div class="pricing-amount mb-4">
                                @if (plan.Price == 0)
                                {
                                    <h2 class="text-success">
                                        <strong>رایگان</strong>
                                    </h2>
                                    <small class="text-muted">تا ابد</small>
                                }
                                else
                                {
                                    <h2 class="text-primary">
                                        <strong>@plan.Price.ToString("N0")</strong>
                                        <small class="text-muted">@plan.Currency</small>
                                    </h2>
                                    <small class="text-muted">هر @plan.BillingCycleDays روز</small>
                                }
                            </div>

                            <!-- Features -->
                            <ul class="list-unstyled text-start mb-4">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    @if (plan.MonthlyTicketLimit == -1)
                                    {
                                        <span>تیکت نامحدود</span>
                                    }
                                    else
                                    {
                                        <span>@plan.MonthlyTicketLimit.ToString("N0") تیکت در ماه</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasEmailIntegration)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>یکپارچه‌سازی ایمیل</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">یکپارچه‌سازی ایمیل</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasApiAccess)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>دسترسی API</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">دسترسی API</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasKnowledgeBase)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>پایگاه دانش</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">پایگاه دانش</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasCannedResponses)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>پاسخ‌های آماده</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">پاسخ‌های آماده</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasAdvancedReporting)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>گزارش‌های پیشرفته</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">گزارش‌های پیشرفته</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasCustomBranding)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>برندینگ اختصاصی</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">برندینگ اختصاصی</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    @if (plan.HasCSATSurveys)
                                    {
                                        <i class="bi bi-check-circle text-success me-2"></i>
                                        <span>نظرسنجی رضایت</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                        <span class="text-muted">نظرسنجی رضایت</span>
                                    }
                                </li>
                                
                                <li class="mb-2">
                                    <i class="bi bi-headset text-info me-2"></i>
                                    @if (plan.Has24x7Support)
                                    {
                                        <span>پشتیبانی ۲۴/۷</span>
                                    }
                                    else if (plan.HasPrioritySupport)
                                    {
                                        <span>پشتیبانی اولویت‌دار</span>
                                    }
                                    else
                                    {
                                        <span>پشتیبانی ایمیلی</span>
                                    }
                                </li>
                            </ul>
                        </div>
                        
                        <div class="card-footer text-center">
                            @if (plan.Type == Helpio.Ir.Domain.Entities.Business.PlanType.Freemium)
                            {
                                <a asp-controller="Subscription" asp-action="CreateFreemiumSubscription" 
                                   class="btn btn-success w-100">
                                    <i class="bi bi-rocket"></i> شروع رایگان
                                </a>
                                <small class="text-muted d-block mt-2">بدون نیاز به کارت اعتباری</small>
                            }
                            else
                            {
                                <a asp-controller="Subscription" asp-action="ContactSales" asp-route-planId="@plan.Id"
                                   class="btn btn-primary w-100">
                                    <i class="bi bi-telephone"></i> تماس با فروش
                                </a>
                                <small class="text-muted d-block mt-2">مشاوره رایگان</small>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                        <h4 class="mt-3 text-muted">هیچ طرح قیمت‌گذاری موجود نیست</h4>
                        <p class="text-muted">در حال حاضر هیچ طرح فعالی برای نمایش وجود ندارد.</p>
                        @if (ViewBag.IsAdmin == true)
                        {
                            <a asp-controller="Plans" asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> ایجاد طرح جدید
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Feature Comparison Table -->
    @if (Model != null && Model.Any())
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="bi bi-table"></i>
                            مقایسه تفصیلی ویژگی‌ها
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">ویژگی</th>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <th scope="col" class="text-center">@plan.Name</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><strong>محدودیت تیکت ماهانه</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.MonthlyTicketLimit == -1)
                                                {
                                                    <span class="badge bg-success">نامحدود</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@plan.MonthlyTicketLimit.ToString("N0")</span>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>دسترسی API</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasApiAccess)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>یکپارچه‌سازی ایمیل</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasEmailIntegration)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>پایگاه دانش</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasKnowledgeBase)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>پاسخ‌های آماده</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasCannedResponses)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>گزارش‌های پیشرفته</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasAdvancedReporting)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>برندینگ اختصاصی</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasCustomBranding)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>نظرسنجی رضایت</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasCSATSurveys)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>پشتیبانی اولویت‌دار</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.HasPrioritySupport)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                    <tr>
                                        <td><strong>پشتیبانی ۲۴/۷</strong></td>
                                        @foreach (var plan in Model.OrderBy(p => p.DisplayOrder))
                                        {
                                            <td class="text-center">
                                                @if (plan.Has24x7Support)
                                                {
                                                    <i class="bi bi-check-circle text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-x-circle text-danger"></i>
                                                }
                                            </td>
                                        }
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Help Section -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h5>سوال یا نیاز به مشاوره دارید؟</h5>
                    <p class="text-muted">تیم ما آماده راهنمایی شما در انتخاب بهترین طرح است.</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-controller="Support" asp-action="Contact" class="btn btn-primary">
                            <i class="bi bi-telephone"></i> تماس با پشتیبانی
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> بازگشت به خانه
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>