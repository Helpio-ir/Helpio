<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - هلپیو</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Helpio.web.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hands-helping me-2"></i>هلپیو
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>خانه
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>درباره ما
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-life-ring me-1"></i>پشتیبانی
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Support" asp-action="Index">
                                    <i class="fas fa-headset me-1"></i>مرکز کمک</a></li>
                                <li><a class="dropdown-item" asp-controller="Support" asp-action="SubmitTicket">
                                    <i class="fas fa-ticket-alt me-1"></i>ثبت تیکت</a></li>
                                <li><a class="dropdown-item" asp-controller="Support" asp-action="KnowledgeBase">
                                    <i class="fas fa-book me-1"></i>پایگاه دانش</a></li>
                                <li><a class="dropdown-item" asp-controller="Support" asp-action="FAQ">
                                    <i class="fas fa-question-circle me-1"></i>سوالات متداول</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Support" asp-action="Contact">
                                    <i class="fas fa-envelope me-1"></i>تماس با ما</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Features">
                                <i class="fas fa-star me-1"></i>ویژگی‌ها
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Pricing">
                                <i class="fas fa-tag me-1"></i>قیمت‌گذاری
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">
                                <i class="fas fa-sign-in-alt me-1"></i>ورود
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-outline-light ms-2" href="#" data-bs-toggle="modal" data-bs-target="#signupModal">
                                <i class="fas fa-user-plus me-1"></i>شروع رایگان
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-5 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5><i class="fas fa-hands-helping me-2"></i>هلپیو</h5>
                    <p class="text-muted">شریک مطمئن شما برای راهکارهای پشتیبانی مشتری و سیستم تیکتینگ.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-telegram"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-linkedin-in"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
                <div class="col-md-2">
                    <h6>شرکت</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="About" class="text-muted">درباره ما</a></li>
                        <li><a href="#" class="text-muted">فرصت‌های شغلی</a></li>
                        <li><a href="#" class="text-muted">وبلاگ</a></li>
                        <li><a href="#" class="text-muted">اخبار</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6>پشتیبانی</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Support" asp-action="Index" class="text-muted">مرکز کمک</a></li>
                        <li><a asp-controller="Support" asp-action="KnowledgeBase" class="text-muted">پایگاه دانش</a></li>
                        <li><a asp-controller="Support" asp-action="FAQ" class="text-muted">سوالات متداول</a></li>
                        <li><a asp-controller="Support" asp-action="Contact" class="text-muted">تماس با ما</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6>محصول</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Features" class="text-muted">ویژگی‌ها</a></li>
                        <li><a asp-controller="Home" asp-action="Pricing" class="text-muted">قیمت‌گذاری</a></li>
                        <li><a href="#" class="text-muted">امنیت</a></li>
                        <li><a href="#" class="text-muted">API</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6>قانونی</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-muted">حریم خصوصی</a></li>
                        <li><a href="#" class="text-muted">شرایط استفاده</a></li>
                        <li><a href="#" class="text-muted">انطباق</a></li>
                        <li><a href="#" class="text-muted">کوکی‌ها</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center text-muted">
                &copy; ۱۴۰۳ هلپیو. تمامی حقوق محفوظ است.
            </div>
        </div>
    </footer>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">ورود به حساب کاربری</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="loginEmail" class="form-label">ایمیل یا شماره تلفن <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="loginEmail" placeholder="ایمیل یا شماره تلفن خود را وارد کنید" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">نوع ورود</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="loginType" id="passwordLogin" value="password" checked>
                                <label class="form-check-label" for="passwordLogin">
                                    ورود با رمز عبور
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="loginType" id="otpLogin" value="otp">
                                <label class="form-check-label" for="otpLogin">
                                    ورود با رمز یکبار مصرف (OTP)
                                </label>
                            </div>
                        </div>
                        <div class="mb-3" id="passwordField">
                            <label for="loginPassword" class="form-label">رمز عبور <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="loginPassword" placeholder="رمز عبور خود را وارد کنید">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">مرا به خاطر بسپار</label>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            حساب کاربری ندارید؟ 
                            <a href="#" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signupModal">ثبت‌نام رایگان</a>
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                    <button type="submit" form="loginForm" class="btn btn-primary">ورود</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Signup Modal -->
    <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="signupModalLabel">شروع رایگان - ایجاد حساب کاربری</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-gift me-2"></i>
                        <strong>پلن فریمیوم رایگان:</strong> ۵۰ تیکت در ماه، تمام ویژگی‌های اصلی
                    </div>
                    <form id="signupForm">
                        <div class="mb-3">
                            <label for="signupName" class="form-label">نام کامل <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="signupName" placeholder="نام کامل خود را وارد کنید" required>
                        </div>
                        <div class="mb-3">
                            <label for="signupCompany" class="form-label">نام شرکت/استارتاپ <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="signupCompany" placeholder="نام شرکت یا استارتاپ خود را وارد کنید" required>
                        </div>
                        <div class="mb-3">
                            <label for="signupEmail" class="form-label">ایمیل <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="signupEmail" placeholder="آدرس ایمیل خود را وارد کنید" required>
                        </div>
                        <div class="mb-3">
                            <label for="signupPhone" class="form-label">شماره تلفن</label>
                            <input type="tel" class="form-control" id="signupPhone" placeholder="شماره تلفن خود را وارد کنید">
                        </div>
                        <div class="mb-3">
                            <label for="signupPassword" class="form-label">رمز عبور <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" id="signupPassword" placeholder="رمز عبور ایجاد کنید (حداقل ۶ کاراکتر)" required minlength="6">
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="agreeTerms" required>
                            <label class="form-check-label" for="agreeTerms">
                                <a href="#" class="text-muted">شرایط استفاده</a> و <a href="#" class="text-muted">حریم خصوصی</a> را می‌پذیرم
                            </label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                    <button type="submit" form="signupForm" class="btn btn-success">
                        <i class="fas fa-rocket me-2"></i>شروع رایگان
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
