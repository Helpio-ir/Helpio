@model TicketSubmissionModel
@{
    ViewData["Title"] = "Submit Support Ticket - Helpio";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-6 fw-bold">Submit a Support Ticket</h1>
                <p class="lead text-muted">Describe your issue and our support team will get back to you as soon as possible</p>
            </div>

            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <form asp-action="SubmitTicket" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-semibold">Full Name *</label>
                                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter your full name">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold">Email Address *</label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email address">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Company" class="form-label fw-semibold">Company</label>
                                <input asp-for="Company" class="form-control form-control-lg" placeholder="Enter your company name">
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="Enter your phone number">
                            </div>
                            <div class="col-12">
                                <label asp-for="Subject" class="form-label fw-semibold">Subject *</label>
                                <input asp-for="Subject" class="form-control form-control-lg" placeholder="Brief description of your issue">
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label fw-semibold">Category *</label>
                                <select asp-for="Category" class="form-select form-select-lg">
                                    <option value="">Select a category</option>
                                    <option value="Technical">Technical Support</option>
                                    <option value="Billing">Billing & Payments</option>
                                    <option value="General">General Inquiry</option>
                                    <option value="FeatureRequest">Feature Request</option>
                                    <option value="BugReport">Bug Report</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Priority" class="form-label fw-semibold">Priority *</label>
                                <select asp-for="Priority" class="form-select form-select-lg">
                                    <option value="">Select priority level</option>
                                    <option value="Low">Low - General question</option>
                                    <option value="Medium">Medium - Some impact</option>
                                    <option value="High">High - Significant impact</option>
                                    <option value="Critical">Critical - System down</option>
                                </select>
                                <span asp-validation-for="Priority" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold">Description *</label>
                                <textarea asp-for="Description" class="form-control" rows="6" placeholder="Please provide detailed information about your issue, including any error messages, steps to reproduce, and relevant context."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Tip: The more details you provide, the faster we can resolve your issue.
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted">
                                <small>* Required fields</small>
                            </div>
                            <div class="d-flex gap-3">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Help Center
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Ticket
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="card border-0 bg-light">
                        <div class="card-body p-4">
                            <h6 class="card-title">
                                <i class="fas fa-lightbulb text-warning me-2"></i>Before submitting
                            </h6>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">• Check our <a asp-action="FAQ">FAQ section</a> for quick answers</li>
                                <li class="mb-2">• Search the <a asp-action="KnowledgeBase">Knowledge Base</a></li>
                                <li>• Try basic troubleshooting steps</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 bg-light">
                        <div class="card-body p-4">
                            <h6 class="card-title">
                                <i class="fas fa-clock text-info me-2"></i>Response Times
                            </h6>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">• Critical: Within 1 hour</li>
                                <li class="mb-2">• High: Within 4 hours</li>
                                <li>• Medium/Low: Within 24 hours</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}