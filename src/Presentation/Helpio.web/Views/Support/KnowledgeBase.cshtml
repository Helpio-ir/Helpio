@{
    ViewData["Title"] = "Knowledge Base - Helpio";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
            <h1 class="display-6 fw-bold">Knowledge Base</h1>
            <p class="lead text-muted">Browse our comprehensive collection of help articles, guides, and tutorials</p>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <div class="input-group input-group-lg">
                <span class="input-group-text bg-white">
                    <i class="fas fa-search text-muted"></i>
                </span>
                <input type="text" class="form-control" placeholder="Search knowledge base...">
                <button class="btn btn-primary" type="button">Search</button>
            </div>
        </div>
    </div>

    <!-- Categories -->
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-rocket fa-2x text-primary me-3"></i>
                        <h5 class="card-title mb-0">Getting Started</h5>
                    </div>
                    <p class="card-text text-muted">Everything you need to know to get up and running quickly</p>
                    <span class="badge bg-light text-dark">12 articles</span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-user-cog fa-2x text-success me-3"></i>
                        <h5 class="card-title mb-0">Account Management</h5>
                    </div>
                    <p class="card-text text-muted">Manage your profile, settings, and preferences</p>
                    <span class="badge bg-light text-dark">8 articles</span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-credit-card fa-2x text-warning me-3"></i>
                        <h5 class="card-title mb-0">Billing & Payments</h5>
                    </div>
                    <p class="card-text text-muted">Payment methods, invoices, and subscription management</p>
                    <span class="badge bg-light text-dark">6 articles</span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-tools fa-2x text-danger me-3"></i>
                        <h5 class="card-title mb-0">Troubleshooting</h5>
                    </div>
                    <p class="card-text text-muted">Common issues and step-by-step solutions</p>
                    <span class="badge bg-light text-dark">15 articles</span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-shield-alt fa-2x text-info me-3"></i>
                        <h5 class="card-title mb-0">Security & Privacy</h5>
                    </div>
                    <p class="card-text text-muted">Keep your account and data secure</p>
                    <span class="badge bg-light text-dark">10 articles</span>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-mobile-alt fa-2x text-secondary me-3"></i>
                        <h5 class="card-title mb-0">Mobile App</h5>
                    </div>
                    <p class="card-text text-muted">Using our mobile applications effectively</p>
                    <span class="badge bg-light text-dark">7 articles</span>
                </div>
            </div>
