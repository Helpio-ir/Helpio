@{
    ViewData["Title"] = "Ticket Submitted Successfully - Helpio";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mx-auto text-center">
            <div class="card border-0 shadow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-4x text-success"></i>
                    </div>
                    <h1 class="h3 fw-bold text-success mb-3">Ticket Submitted Successfully!</h1>
                    <p class="text-muted mb-4">@ViewBag.Message</p>
                    
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Ticket ID: #HL@(DateTime.Now.ToString("yyyyMMdd"))@(new Random().Next(1000, 9999))</strong>
                        <br>
                        <small>Please save this ID for future reference.</small>
                    </div>

                    <div class="text-start mb-4">
                        <h6 class="fw-semibold">What happens next?</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-envelope text-primary me-2"></i>
                                You'll receive an email confirmation shortly
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-user-tie text-primary me-2"></i>
                                Our support team will review your ticket
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-reply text-primary me-2"></i>
                                We'll respond based on your priority level
                            </li>
                            <li>
                                <i class="fas fa-bell text-primary me-2"></i>
                                You'll be notified of any updates
                            </li>
                        </ul>
                    </div>

                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Back to Help Center
                        </a>
                        <a asp-action="SubmitTicket" class="btn btn-outline-secondary">
                            <i class="fas fa-plus me-2"></i>Submit Another Ticket
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Support Options -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card border-0 bg-light h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-comments fa-2x text-info mb-3"></i>
                            <h6>Need Immediate Help?</h6>
                            <p class="text-muted small">Start a live chat with our support team</p>
                            <button class="btn btn-info btn-sm" onclick="startLiveChat()">Start Chat</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 bg-light h-100">
                        <div class="card-body text-center p-4">
                            <i class="fas fa-phone fa-2x text-success mb-3"></i>
                            <h6>Call Us Directly</h6>
                            <p class="text-muted small">Available 24/7 for urgent issues</p>
                            <a href="tel:+1-800-HELPIO" class="btn btn-success btn-sm">Call Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function startLiveChat() {
        alert('Live chat feature will be implemented soon!');
    }
</script>
}