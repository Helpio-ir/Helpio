@model Helpio.Ir.Domain.Entities.Core.Customer
@{
    ViewData["Title"] = "افزودن مشتری جدید";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">اطلاعات مشتری جدید</h3>
            </div>
            <form asp-action="Create" method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FirstName" class="form-label">نام <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control" placeholder="نام مشتری را وارد کنید" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LastName" class="form-label">نام خانوادگی <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control" placeholder="نام خانوادگی مشتری را وارد کنید" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">ایمیل <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="example@domain.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="PhoneNumber" class="form-label">شماره تلفن</label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="09123456789" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="CompanyName" class="form-label">نام شرکت</label>
                        <input asp-for="CompanyName" class="form-control" placeholder="نام شرکت (اختیاری)" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label">آدرس</label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="آدرس کامل مشتری"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check"></i> ذخیره مشتری
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> بازگشت
                    </a>
                </div>
            </form>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">راهنما</h3>
            </div>
            <div class="card-body">
                <h6>نکات مهم:</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-info-circle text-info"></i> فیلدهای دارای ستاره (*) اجباری هستند</li>
                    <li><i class="bi bi-envelope text-primary"></i> ایمیل باید منحصر به فرد باشد</li>
                    <li><i class="bi bi-phone text-success"></i> شماره تلفن برای ارتباط مستقیم</li>
                    <li><i class="bi bi-building text-warning"></i> نام شرکت برای مشتریان حقوقی</li>
                </ul>
                
                <hr>
                
                <h6>مزایای ثبت اطلاعات کامل:</h6>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> پیگیری بهتر تیکت‌ها</li>
                    <li><i class="bi bi-check-circle text-success"></i> ارتباط مؤثرتر</li>
                    <li><i class="bi bi-check-circle text-success"></i> ارائه خدمات شخصی‌سازی شده</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}