@model List<Helpio.Ir.Domain.Entities.Core.Customer>
@{
    ViewData["Title"] = "مدیریت مشتریان";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">لیست مشتریان</h3>
                <div class="card-tools">
                    @if (ViewBag.IsAdmin == true || ViewBag.IsManager == true)
                    {
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus"></i> مشتری جدید
                        </a>
                    }
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>نام</th>
                                    <th>ایمیل</th>
                                    <th>شرکت</th>
                                    <th>تعداد تیکت‌ها</th>
                                    <th>تاریخ ثبت</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@customer.Id" class="text-decoration-none">
                                                <strong>@customer.FirstName @customer.LastName</strong>
                                            </a>
                                            @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                                            {
                                                <br><small class="text-muted">@customer.PhoneNumber</small>
                                            }
                                        </td>
                                        <td>
                                            <a href="mailto:@customer.Email">@customer.Email</a>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(customer.CompanyName))
                                            {
                                                @customer.CompanyName
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@customer.Tickets.Count</span>
                                        </td>
                                        <td>
                                            @customer.CreatedAt.ToString("yyyy/MM/dd")
                                        </td>
                                        <td>
                                            <span class="badge bg-@(!customer.IsDeleted ? "success" : "danger")">
                                                @(!customer.IsDeleted ? "فعال" : "حذف شده")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (ViewBag.IsAdmin == true || ViewBag.IsManager == true)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-controller="Tickets" asp-action="Create" asp-route-customerId="@customer.Id" class="btn btn-sm btn-success">
                                                        <i class="bi bi-plus"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-people" style="font-size: 3rem; color: #ccc;"></i>
                        <h4 class="text-muted">هیچ مشتری یافت نشد</h4>
                        <p class="text-muted">در حال حاضر مشتری برای نمایش وجود ندارد.</p>
                        @if (ViewBag.IsAdmin == true || ViewBag.IsManager == true)
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus"></i> ایجاد اولین مشتری
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>