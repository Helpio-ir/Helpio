@model List<Helpio.Ir.Domain.Entities.Ticketing.Ticket>
@{
    ViewData["Title"] = "مدیریت تیکت‌ها";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">لیست تیکت‌ها</h3>
                <div class="card-tools">
                    @if (ViewBag.IsAdmin == true || ViewBag.IsManager == true)
                    {
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus"></i> تیکت جدید
                        </a>
                    }
                </div>
            </div>
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>شماره تیکت</th>
                                    <th>عنوان</th>
                                    <th>مشتری</th>
                                    <th>وضعیت</th>
                                    <th>کارشناس</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>#@ticket.Id</strong>
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@ticket.Id" class="text-decoration-none">
                                                @ticket.Title
                                            </a>
                                        </td>
                                        <td>
                                            @if (ticket.Customer != null)
                                            {
                                                @ticket.Customer.FirstName @ticket.Customer.LastName
                                            }
                                            else
                                            {
                                                <span class="text-muted">نامشخص</span>
                                            }
                                        </td>
                                        <td>
                                            @if (ticket.TicketState != null)
                                            {
                                                <span class="badge bg-@(ticket.TicketState.Name == "Open" ? "warning" : ticket.TicketState.Name == "Closed" ? "success" : "primary")">
                                                    @ticket.TicketState.Name
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (ticket.SupportAgent?.User != null)
                                            {
                                                @ticket.SupportAgent.User.FirstName @ticket.SupportAgent.User.LastName
                                            }
                                            else
                                            {
                                                <span class="text-muted">تخصیص داده نشده</span>
                                                @if (ViewBag.IsAgent == true && ticket.SupportAgentId == null)
                                                {
                                                    <form asp-action="AssignToMe" asp-route-id="@ticket.Id" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                                            اختصاص به من
                                                        </button>
                                                    </form>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @ticket.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (ViewBag.IsAdmin == true || ViewBag.IsManager == true || 
                                                     (ViewBag.IsAgent == true && ticket.SupportAgentId == ViewBag.CurrentUserId))
                                                {
                                                    <a asp-action="Edit" asp-route-id="@ticket.Id" class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                        <h4 class="text-muted">هیچ تیکتی یافت نشد</h4>
                        <p class="text-muted">در حال حاضر تیکتی برای نمایش وجود ندارد.</p>
                        @if (ViewBag.IsAdmin == true || ViewBag.IsManager == true)
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus"></i> ایجاد اولین تیکت
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>